<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme" />


    <style name="MenuItemStyle" parent="AppTheme">
		<item name="android:showAsAction">ifRoom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
	</style>

	<style name="MyTheme" parent="AppTheme">
		<item name="android:actionBarStyle">@style/MyWidget.ActionBar</item>
		<item name="android:icon">@mipmap/ic_launcher_foreground</item>
		<item name="android:textSize">@dimen/app_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
	</style>


	<style name="MyWidget.ActionBar" parent="AppTheme">
		<item name="android:displayOptions">showCustom</item>
		<item name="android:customNavigationLayout">@layout/custom</item>
	</style>
	<style name="ActionBarButton">
		<item name="android:background">@color/transparent</item>
		<item name="android:padding">0sp</item>
	</style>

	<style name="ActionBarButton.Hidden">
		<item name="android:visibility">gone</item>
	</style>

	<style name="PageItemStyle" parent="AppTheme">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">8sp</item>
	</style>

	<style name="CheckBoxStyle" parent="AppTheme">
		<item name="android:fontFamily">monospace</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:onClick">commitButton</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
	</style>
	
	<style name="SpinnerStyle" parent="AppTheme">
        <item name="android:fontFamily">monospace</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		
	</style>

	<style name="EntryField" parent="AppTheme">
		<item name="android:fontFamily">monospace</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:lines">1</item>
		<item name="android:inputType">textNoSuggestions</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="TextFieldStyle" parent="AppTheme">
		<item name="android:fontFamily">monospace</item>
		<item name="android:paddingRight">8sp</item>
	</style>

	<style name="TextFieldStyle.Label">
		<item name="android:fontFamily">monospace</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="TerminalStyle" parent="AppTheme">
		<item name="android:gravity">bottom</item>
		<item name="android:background">@color/terminal_color</item>
		<item name="android:fontFamily">monospace</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">8px</item>
	</style>

</resources>
